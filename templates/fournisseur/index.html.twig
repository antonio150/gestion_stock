{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div >
<a class="btn btn-primary" href="{{path('ajout_fournisseur')}}">Ajout fournisseur</a>
</div>

<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nom</th>
				<th scope="col">Type</th>
				<th scope="col">Adresse</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for items in fournisseur %}
				<tr>
					<th scope="row">{{items.id}}</th>
					<td>{{items.nom}}</td>
					<td>{{items.type}}</td>
					<td>{{items.adresse}}</td>
					<td>
						<a href="{{path('delete_fournisseur', {id:items.id})}}" class="btn btn-alert">Supprimer</a>
						<a href="{{path('edit_fournisseur', {id:items.id})}}" class="btn btn-success">Modifier</a>
					</td>

				</tr>
			{% endfor %}


		</tbody>
	</table>
{% endblock %}
