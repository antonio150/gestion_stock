{% extends 'base.html.twig' %}
{% block title %}Ajout fournisseur
{% endblock %}

{% block body %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}

	{{form_start(form)}}
	<div class="form-group">
		{{form_label(form.produit)}}
		{{form_widget(form.produit)}}
		{{form_errors(form.produit)}}
	</div>

	<div class="form-group">
		{{form_label(form.quantiteStock)}}
		{{form_widget(form.quantiteStock)}}
		{{form_errors(form.quantiteStock)}}
	</div>

	<div class="form-group">
		{{form_label(form.emplacement)}}
		{{form_widget(form.emplacement)}}
		{{form_errors(form.emplacement)}}
	</div>

	{{form_row(form.save)}}
	{{form_end(form)}}

{% endblock %}
