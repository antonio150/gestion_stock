{% extends 'client_page/index.html.twig' %}

{% block title %}Achat{% endblock %}


{% block body %}
<div>

<div> <a href="{{path('ajout_achat')}}" class="btn"> Ajouter </a> </div>
<div>
    <a href="{{ path('pdf_achat') }}" class="btn btn-primary" target="_blank">
        Télécharger le PDF
    </a>
</div>
<div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Montant</th>
                <th scope="col">Fournisseur</th>
                <th scope="col">Date</th>
                <th scope="col">Heure</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for list in listeAchat %}
            <tr>
                <td>{{ list.produit }}</td>
                <td>{{ list.montant }}</td>
                <td>{{ list.fournisseur }}</td>
                <td>{{ list.dateAchat|date('Y-m-d') }}</td>
                <td>{{ list.time|date('H:i:s') }}</td>
                <td>
                    <a href="{{path('delete_achat', {id:list.id})}}" class="btn btn-alert">Supprimer</a>
                    <a href="{{path('edit_achat', {id:list.id})}}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
          {% endfor %}  
        </tbody>
    </table>

</div>

</div>
{% endblock %}
